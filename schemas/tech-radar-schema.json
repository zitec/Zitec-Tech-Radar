{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "quadrants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        },
        "additionalProperties": false,
        "required": ["id", "name"]
      }
    },
    "rings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "color": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false,
        "required": ["id", "name", "color"]
      }
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "title": { "type": "string" },
          "quadrant": { "type": "string" },
          "description": { "type": "string" },
          "timeline": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "ringId": { "type": "string" },
                "date": { "type": "string", "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$" },
                "description": { "type": "string" },
                "moved": { "type": "integer", "enum": [-1, 0, 1] }
              },
              "additionalProperties": false,
              "required": ["ringId", "date", "description"]
            }
          }
        },
        "additionalProperties": false,
        "required": ["key", "title", "quadrant", "timeline"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["title", "quadrants", "rings", "entries"]
}
